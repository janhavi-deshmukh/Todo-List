<%-include("header")-%>

    <div class="box" id="heading">
        <h1><%=ListTitle%></h1>
    </div>
    
    <div class="box">

        <% newItems.forEach(function(item) { %>

            <form action="/delete" method="post" id="deleteform">
            <div class="item">
                <input type="checkbox" name="deleteItem" value="<%=item._id%>" id="check" onChange="this.form.submit()">
            <li><%= item.name %></li> 
            </div>
            <input type="hidden" name="listName" value="<%=ListTitle%>"></input>
            </form>
          <% }); %>

      
               

         <form action="/" method="post" class="item">
            <input type="text" name="inputText" placeholder="New item" autocomplete="off">
            <button type="submit" name="list" value="<%=ListTitle%>">+</button>
        </form> 

    </div>

